<section role="contentinfo" aria-label="Call to action" id="{{section.settings.unique_id | handleize}}" class=" section-selected-products relative {% if section.settings.bg_parallax %} overflow-hidden{% endif %} section section--align-{{section.settings.section_heading_align }} section--spacing-{{section.settings.spacing }} section--bg-{{section.settings.content_bg }} section--outer-spacing-{{section.settings.outer_spacing }} {{ section.settings.custom_classes | escape }} section--pt-{{section.settings.padding_top}} section--pb-{{section.settings.padding_bottom}}"
